---
import { allTag, mapCategoryTag } from "post:info";

export interface Props {
  category: string
}

const { category } = Astro.props;
---

<section class="flex flex-row flex-wrap gap-2">
  {Array.from(mapCategoryTag[category]!.keys()).map(tag => (
    <div class="inline-flex gap-0.5">
      <span class="text-two-front ub-two-front @hover-text-two @hover-border-two inline-chip transition-lively">
        <a href={new URL(`${import.meta.env.BASE_URL}tag/${tag}`, Astro.site)}>@{tag}</a>
      </span>
      <span class="text-sm font-mono relative bottom-1">{allTag[tag]!.length}</span>
    </div>
  ))}
</section>
